{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/services/:slug", "destination": "/service.html?slug=:slug" },
    { "source": "/en/:path*", "destination": "/en/index.html" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/services", "destination": "/#competences", "statusCode": 302 },
    { "source": "/services/", "destination": "/#competences", "statusCode": 302 },
    { "source": "/service/:slug", "destination": "/services/:slug", "statusCode": 301 },
    { "source": "/(.*)", "has": [{ "type": "host", "value": "siteonweb.fr" }], "destination": "https://www.siteonweb.fr/$1", "statusCode": 301 }
  ],
  "headers": [
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
